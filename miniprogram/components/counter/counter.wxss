.counter-controls {
  width:100%;
  height: 30px;
  border-radius: 5px;
  border: 1px solid #ddd;
  display: flex;
  overflow: hidden;
}

.counter-sub, .counter-add {
  height: 30px;
  line-height: 30px;
  width:30px;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
  font-size: 120%;
  font-weight: bold;
  color: #333;
  z-index: 1
}
.counter-input {
  /* flex: 1; */
  height: 30px;
  width: calc(100% - 60px);
  box-sizing: border-box;
  font-size: 80%;
  color: #333;
}

.counter-input input {
  height: 30px;
  z-index: 1;
  text-align: center;
}

.counter-sub {
  border-right: 1px solid #ddd;
}

.counter-add {
  border-left: 1px solid #ddd;
}


.counter-sub.disabled, .counter-add.disabled {
  color: #ccc;
}