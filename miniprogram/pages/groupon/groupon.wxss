@import '../base/style.wxss';

page {
  background-color: #f5f5f5;
  height: 100vh
}

.title-share {
  all: unset;
}

.title-share:after {
  all: unset;
}


.title {
  font-weight: bold;
  margin-bottom: 10px;
  display: flex;
  flex-wrap: nowrap;
  font-size: 120%;
}

.title-wrapper {
  width: 90%;
}

.title-share {
  width: 10%;
  text-align: right;
  color: #2E68BB;
  font-size: 130%;
}

.price {
  color: #FC0000
}

.groupon-item {
  border-radius: 5px;
  padding: 16px;
  min-height: 100px;
  background-color: #fff;
  box-sizing: border-box;
}

.cover {
  min-height: 100px;
  margin-bottom: 10px;
}
.orderlogs{
  color: #333;
}
.log {
  line-height: 34px;
  height: 34px;
  overflow: hidden;
  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.groupon-status {
  margin-top: 15px;
  color: #666;
}

.avatar {
  vertical-align:middle;
  border-radius: 3px;
}

.sip {
  margin-right: 5px;
}

.log .create_at {
  color: #999;
  font-size: 90%;
}

.goods-name {
  width: 120px;
  margin: auto;
  margin-right: 0;
  

}

.user-name {
  max-width: 80px;
  display: inline-block;
}

.log .avatar {
  width: 20px; 
  height: 20px;
}

.log-item {
  display: inline-block;
}