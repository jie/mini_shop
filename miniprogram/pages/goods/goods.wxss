@import '../base/style.wxss';
@import '../base/buycart.wxss';
.container {
  /* background-color: #e67774; */
  position: relative;
}

.goods-wrapper {
  box-sizing: border-box;
  padding: 12px;
}

.goods .goods-item {
  background-color: #f9f9f9;
  box-sizing: border-box;
  font-size: 12px;
  border-radius: 20px;
  text-align: center;
  box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.2);
  overflow: hidden;
  position: relative;
  height: 220px;
}

.goods-item .goods-image image {
  width: 100%;
  height: 220px;
}

.goods-item .goods-meta {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50px;
  background-color: rgba(255, 255, 255, 0.7);
  line-height: 50px;
  display: flex;
}

.goods-label {
  font-size: 160%;
  color: #333;
  /* font-weight: bold; */
  flex: 1;
  text-align: left;
  padding-left: 20px;
}

.goods-button {
  height: 30px;
  line-height: 30px;
  border-radius: 15px;
  background-color: #fa8282;
  margin-top: 10px;
  margin-right: 5px;
}

.goods-button .goods-price {
  padding-left: 10px;
  padding-right: 5px;
  font-size: 120%;
}

.goods-button .goods-buycart {
  padding-right: 10px;
}

.header {
  padding: 10px;
  /* border-bottom: 1px solid #f9f9f9; */
}
