@import '../base/style.wxss';

.container {
  /* background-color: #e67774; */
  position: relative;
}

.create-entity-btn {
  position: fixed;
  bottom: 20px;
  right: 30px;
  height: 50px;
  width: 140px;
  border-radius: 30px;
  box-sizing: border-box;
  z-index: 10;
  background-color: #d9262f;
  color: #fff;
  font-weight: bold;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.2);
}

.entities {
  display: flex;
  padding: 15px;
  flex-wrap: wrap;
}

.entity-item {
  width: 33.33%;
  height: 140px;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15px;
}

.entity-item .img {
  width: 100%;
  height: 100px;
}

.entity-wrapper {
  border: 1px solid #ddd;
  box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.2);
  height: 140px;
  width: 90%;
}

.entity-item .entity-image {
  width: 100%;
  height: 100px;
  border-bottom: 1px solid #ddd;
}

.entity-desc {
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 80%;
  color: #666
}

.gray {
  filter:grayscale(100%); 
}

.gray .entity-desc {
  color: #fff;
  background-color: #ccc;
}